{
  "manifest_version": 3,
  "name": "Udemy Transcript Copier",
  "version": "1.0",
  "description": "Adds a button to copy all transcripts on Udemy.",
  "permissions": [
    "scripting",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.udemy.com/course/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}